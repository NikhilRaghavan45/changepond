class Program
{
    struct Location
    {
        public int longitute;
        public int latitude;
        public Location(int longitute,int latitude)
        {
            this.longitute = longitute;
            this.latitude = latitude;
        }

    }

    enum WeekDays
    {
        Monday, //if you want to change the index to start from 1 use Monday=1
        Tuesday,
        Wednesday,
        Thursday,
        Friday,
        Saturday,
        Sunday
    }

    enum Payment
    {
        CC=10,
        NB=30,
        UPI=20
    }
    private static void Main(string[] args)
    {
        int day = (int)(WeekDays.Tuesday);
        Console.WriteLine(day);
        Console.WriteLine(Payment.UPI);
        Console.WriteLine((int)(Payment.UPI));
        dynamic gender = 0;
        gender = "M";
        gender = true;
        Console.WriteLine(gender);
        byte radius = 5;
        sbyte miles = -120;
        short area = 32000;
        ushort area1 = 35000;
        int perimeter;
        perimeter = 1000000;
        int hef = 0xf;
        long distance = 735735737598357637;
        float pi_value = 3.14f;
        double aofc = 59.93939393d;
        decimal longitude = 0.23423423423443m;
        double dtoomr = 0.20e2;
        decimal dtom = 1.2e6m;

        string fullname = "Nikhil";
        //char gender = 'R';
        String message = "Good Morning";

        string appreciation="he is \"Mr.Genious\"";
        string appreciationonnew = "he is \n \"Mr.Genious\"";
        string appreciationontab = "he is \t \"Mr.Genious\"";

        string details = $"Mr.{fullname} gender is {gender}";
        Console.WriteLine(fullname+" "+message);
        Console.WriteLine("Hello, World!");
        Console.WriteLine(details);
        Console.WriteLine(appreciation);
        Console.WriteLine(appreciationonnew);
        Console.WriteLine(appreciationontab);
        Console.WriteLine(Int16.MaxValue);
        Console.WriteLine(Int16.MinValue);

        DateTime dt = new DateTime();
        Console.WriteLine(dt);
        DateTime newdt = new DateTime(2023,11,1);
        Console.WriteLine(newdt);
        DateTime newdtt = new DateTime(2023, 11, 1,16,43,20);
        Console.WriteLine(newdtt);
        DateTime newdttt = new DateTime(2023, 11, 1, 16, 43, 20,DateTimeKind.Utc);
        Console.WriteLine(newdttt);
        Console.WriteLine(DateTime.Now);
        Console.WriteLine(DateTime.Today);
        Console.WriteLine(DateTime.MaxValue);
        Console.WriteLine(DateTime.MinValue);
        Console.WriteLine(DateTime.UtcNow);
        Location cordinate = new Location();
        cordinate.latitude = 10;
        cordinate.longitute = 20;
        Console.WriteLine(cordinate.longitute);
        Console.WriteLine(cordinate.latitude);
        Location cordinatel = new Location(30, 40);
        Console.WriteLine(cordinatel.longitute);
        Console.WriteLine(cordinatel.latitude);


    }
}


